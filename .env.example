# HomeoInvent Environment Configuration
# Copy this file to .env and add your actual API keys

# Database Configuration
DATABASE_URL=your_postgresql_database_url_here

# AI API Integration (Optional - for enhanced symptom matching)
# Choose one of the following AI services:

# Option 1: xAI Grok API (Recommended for homeopathic analysis)
AI_API_KEY=YOUR_XAI_GROK_API_KEY_HERE
AI_API_ENDPOINT=https://api.x.ai/v1/analyze

# Option 2: OpenAI GPT API (Alternative)
# AI_API_KEY=YOUR_OPENAI_API_KEY_HERE
# AI_API_ENDPOINT=https://api.openai.com/v1/chat/completions

# Firebase Configuration (for cloud-based inventory sharing)
FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY_HERE
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Admin SDK (for server-side operations)
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_FIREBASE_ADMIN_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Optional: Security settings
SESSION_SECRET=your_secure_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Development settings
NODE_ENV=development
PORT=5000